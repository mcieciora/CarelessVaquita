pipelineJob("NightlyTestPipeline_INPUT.PROJECT_NAME") {
    properties {
        pipelineTriggers {
            triggers {
                parameterizedTimerTrigger {
                    parameterizedSpecification('''
                    H 21 * * *
                    ''')
                }
            }
        }
    }
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("INPUT.PROJECT_URL")
                    }
                    branch('*/develop')
                }
            }
            scriptPath("tools/jenkins/NightlyTestJenkinsfile")
            lightweight()
        }
    }
    logRotator {
        daysToKeep(7)
    }
}