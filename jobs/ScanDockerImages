pipelineJob("ScanDockerImages_INPUT.PROJECT_NAME") {
    parameters {
        stringParam("SCRIPT_BRANCH", "develop", "Execution branch.")
    }
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("INPUT.PROJECT_URL")
                    }
                    branch("*/develop")
                }
            }
            scriptPath("tools/jenkins/ScanDockerImagesJenkinsfile")
            lightweight()
        }
    }
    logRotator {
        daysToKeep(7)
    }
}